{
  "name": "quillarbiter",
  "version": "1.0.0",
  "private": false,
  "description": "Decentralized Arbitration & Evidence Vault Protocol on Optimism",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network optimismSepolia",
    "verify": "node scripts/verify-contracts.js",
    "node": "hardhat node",
    "listen": "node scripts/listen-events.js",
    "interact": "node scripts/interact.js",
    "simulate": "node scripts/simulate-dispute.js",
    "check": "node scripts/check-deployment.js",
    "roles": "node scripts/grant-roles.js",
    "estimate": "node scripts/estimate-gas.js",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts"
  },
  "keywords": [
    "blockchain",
    "arbitration",
    "dispute-resolution",
    "optimism",
    "smart-contracts",
    "defi",
    "dao",
    "governance",
    "jury",
    "voting",
    "zk-proof",
    "chainlink-vrf"
  ],
  "author": "QuillArbiter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eminaskoses/QuillArbiter.git"
  },
  "bugs": {
    "url": "https://github.com/eminaskoses/QuillArbiter/issues"
  },
  "homepage": "https://github.com/eminaskoses/QuillArbiter#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
